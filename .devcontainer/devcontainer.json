{
    "image": "mcr.microsoft.com/devcontainers/python:3.10",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens",
                "tamasfe.even-better-toml",
                "davidanson.vscode-markdownlint",
                "yzhang.markdown-all-in-one",
                "irongeek.vscode-env",
                "github.copilot",
                // python
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.isort",
                "njpwerner.autodocstring",
                "batisteo.vscode-django",
                // js
                "dbaeumer.vscode-eslint"
            ],
            "settings": {
                // my settings
                "extensions.ignoreRecommendations": true,
                "editor.rulers": [
                    95
                ],
                "files.autoSave": "onFocusChange",
                "files.insertFinalNewline": true,
                "editor.formatOnSave": true,
                "editor.wordWrap": "on",
                // python related
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.linting.lintOnSave": true,
                "python.linting.pylintPath": "${workspaceFolder}/backend/.venv/bin/pylint",
                "python.linting.pylintArgs": [
                    "--rcfile=${workspaceFolder}/backend/pyproject.toml",
                ],
                "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
                "python.formatting.provider": "black",
                "python.formatting.blackPath": "${workspaceFolder}/backend/.venv/bin/black",
                "python.formatting.blackArgs": [
                    "--config",
                    "${workspaceFolder}/backend/pyproject.toml"
                ],
                "isort.args": [
                    "--settings-path",
                    "${workspaceFolder}/backend/pyproject.toml"
                ],
                "isort.check": true,
                "isort.path": [
                    "${workspaceFolder}/backend/.venv/bin/isort"
                ],
                "isort.interpreter": [
                    "${workspaceFolder}/backend/.venv/bin/python"
                ],
                "terminal.integrated.env.linux": {
                    "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/backend/src",
                    "POSTGRES_HOST": "localhost",
                    "POSTGRES_DB": "postgres",
                    "POSTGRES_USER": "postgres",
                    "POSTGRES_PASSWORD": "postgres",
                    "POSTGRES_PORT": "5432",
                    "DJANGO_SECRET_KEY": "django-insecure-+a-dsrffda_7&45g(m57x0l!dt!i319nc8*-6-2son23tvj27c",
                    "DJANGO_DEBUG": "True"
                },
                "python.testing.pytestArgs": [
                    "backend"
                ],
                "python.testing.unittestEnabled": false,
                "python.testing.pytestEnabled": true,
            }
        },
    },
    "postStartCommand": "bash prepare-dev.sh && cd backend && poetry install",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {},
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "dockerDashComposeVersion": "v2"
        },
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "forwardedPorts": [
        5050,
        5432,
        8000,
        8888,
        3000
    ]
}
